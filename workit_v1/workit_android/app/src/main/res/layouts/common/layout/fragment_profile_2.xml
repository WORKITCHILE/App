<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/padding_large"
    android:paddingEnd="@dimen/padding_large">


    <EditText
        android:id="@+id/et_profile_desc"
        style="@style/WorkItTextInputLayout.EditText.Corner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_xxxx_large"
        android:gravity="top"
        android:hint="@string/address"
        android:inputType="textPostalAddress"
        android:padding="@dimen/padding_medium" />

    <EditText
        android:id="@+id/et_phone"
        style="@style/WorkItTextInputLayout.EditText.Corner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:gravity="top"
        android:hint="@string/contact_number"
        android:inputType="phone"
        android:padding="@dimen/padding_medium" />

    <EditText
        android:id="@+id/et_father_name"
        style="@style/WorkItTextInputLayout.EditText.Corner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:gravity="top"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:padding="@dimen/padding_medium" />


    <EditText
        android:id="@+id/et_id_number"
        style="@style/WorkItTextInputLayout.EditText.Corner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:gravity="top"
        android:hint="@string/id_number"
        android:inputType="numberSigned"
        android:padding="@dimen/padding_medium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:background="@drawable/edittext_background_border_with_corner"
        android:minHeight="@dimen/spinner_height"
        android:padding="0dp">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:text="@string/id_picture_both_side"
        android:textAppearance="@style/WorkItApp.SubHeader"
        android:textColor="@color/textColorBlack" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        style="@style/ButtonBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_x_large"
        android:layout_marginEnd="@dimen/margin_large"
        android:text="@string/next"
        android:textAppearance="@style/WorkItApp.Title.Button"
        android:textColor="@color/colorWhite" />

</LinearLayout>