<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/padding_large"
    android:paddingEnd="@dimen/padding_large">


    <EditText
        android:id="@+id/et_password"
        style="@style/WorkItTextInputLayout.EditText.Corner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_xxxx_large"
        android:gravity="top"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:padding="@dimen/padding_medium" />

    <EditText
        android:id="@+id/et_confirm_password"
        style="@style/WorkItTextInputLayout.EditText.Corner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:gravity="top"
        android:hint="@string/confirm_password"
        android:inputType="textPassword"
        android:padding="@dimen/padding_medium" />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:checked="true"
        android:text="@string/accept_terms_and_conditions"
        android:textAppearance="@style/WorkItApp.SubTitle"
        android:textColor="@color/colorBlack"
        android:theme="@style/CheckboxStyle"
        app:buttonTint="@color/colorPurple" />

    <Button
        style="@style/ButtonBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_x_large"
        android:layout_marginEnd="@dimen/margin_large"
        android:text="@string/finish"
        android:textAppearance="@style/WorkItApp.Title.Button"
        android:textColor="@color/colorWhite" />
</LinearLayout>
