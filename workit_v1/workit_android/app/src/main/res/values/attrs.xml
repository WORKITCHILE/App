<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="WorkItEditText">
        <!-- The base color of the line and the texts. Default is black. -->
        <attr name="workit_baseColor" format="color" />
        <!-- The highlight color of the line, and the floating label if the highlightFloatingLabel is true. -->
        <attr name="workit_primaryColor" format="color" />
        <!-- How the floating label should be shown. Default is none -->
        <attr name="workit_floatingLabel">
            <enum name="none" value="0" />
            <enum name="normal" value="1" />
            <enum name="highlight" value="2" />
        </attr>
        <!-- The color for when something is wrong.(e.g. exceeding max characters) -->
        <attr name="workit_errorColor" format="color" />
        <!-- Min characters count limit. 0 means no limit. -->
        <attr name="workit_minCharacters" format="integer" />
        <!-- max Characters count limit. 0 means no limit. -->
        <attr name="workit_maxCharacters" format="integer" />
        <!-- Whether to show the bottom ellipsis in singleLine mode -->
        <attr name="workit_singleLineEllipsis" format="boolean" />
        <!-- Reserved bottom text lines count, no matter if there is some helper/error text. -->
        <attr name="workit_minBottomTextLines" format="integer" />
        <!-- Helper text at the bottom -->
        <attr name="workit_helperText" format="string" />
        <!-- Helper text color -->
        <attr name="workit_helperTextColor" format="color" />
        <!-- Font of the paint used to draw accent texts -->
        <attr name="workit_accentTypeface" format="string" />
        <!-- Font used on view -->
        <attr name="workit_typeface" format="string" />
        <!-- Custom float label text -->
        <attr name="workit_floatingLabelText" format="string" />
        <!-- spacing between the main text and the floating label -->
        <attr name="workit_floatingLabelPadding" format="dimension" />
        <!-- Hide underline -->
        <attr name="workit_hideUnderline" format="boolean" />
        <!-- Underline's color -->
        <attr name="workit_underlineColor" format="color" />
        <!-- Auto validate -->
        <attr name="workit_autoValidate" format="boolean" />
        <!-- Left icon -->
        <attr name="workit_iconLeft" format="reference" />
        <!-- Right icon -->
        <attr name="workit_iconRight" format="reference" />
        <!-- Padding between icon(s) and the main area. 8dp by default. -->
        <attr name="workit_iconPadding" format="dimension" />
        <!-- Clear button -->
        <attr name="workit_clearButton" format="boolean" />
        <!-- The floating label's text size. 12sp by default. -->
        <attr name="workit_floatingLabelTextSize" format="dimension" />
        <!-- The floating label's text color. -1 by default. -->
        <attr name="workit_floatingLabelTextColor" format="color" />
        <!-- The bottom texts' size. 12sp by default. -->
        <attr name="workit_bottomTextSize" format="dimension" />
        <!-- Always show the floating label, instead of animating it in/out. False by default. -->
        <attr name="workit_floatingLabelAlwaysShown" format="boolean" />
        <!-- Always show the helper text, no matter if the edit text is focused. False by default. -->
        <attr name="workit_helperTextAlwaysShown" format="boolean" />
        <!-- Whether use animation to show/hide the floating label. True by default. -->
        <attr name="workit_floatingLabelAnimating" format="boolean" />
        <!-- Text color -->
        <attr name="workit_textColor" format="color" />
        <!-- Hint Text Color -->
        <attr name="workit_textColorHint" format="color" />
        <!-- Auto validate on focus lost. False by default. -->
        <attr name="workit_validateOnFocusLost" format="boolean" />
        <!-- Whether check the characters count at the beginning it's shown. True by default. -->
        <attr name="workit_checkCharactersCountAtBeginning" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MagicText">
        <attr name="magic_text" format="string" />
        <!-- For single Sub String -->
        <attr name="magic_color" format="color" />
        <attr name="magic_size" format="integer" />
        <attr name="magic_style" format="string" />
        <attr name="magic_substring" format="string" />
        <!-- For multiple Sub String -->
        <attr name="magic_multiple_color" format="string" />
        <attr name="magic_multiple_size" format="string" />
        <attr name="magic_multiple_style" format="string" />
        <attr name="magic_multiple_substring" format="string" />
    </declare-styleable>



    <declare-styleable name="ProgressWheel">
        <attr name="matProg_progressIndeterminate" format="boolean" />
        <attr name="matProg_barColor" format="color" />
        <attr name="matProg_rimColor" format="color" />
        <attr name="matProg_rimWidth" format="dimension" />
        <attr name="matProg_spinSpeed" format="float" />
        <attr name="matProg_barSpinCycleTime" format="integer" />
        <attr name="matProg_circleRadius" format="dimension" />
        <attr name="matProg_fillRadius" format="boolean" />
        <attr name="matProg_barWidth" format="dimension" />
        <attr name="matProg_linearProgress" format="boolean" />
    </declare-styleable>

</resources>