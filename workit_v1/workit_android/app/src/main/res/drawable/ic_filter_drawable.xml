<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">

            <size
                    android:width="24dp"
                    android:height="24dp"/>
            <corners android:radius="4dp"/>
            <stroke
                    android:width="@dimen/default_stroke_width"
                    android:color="@color/colorLightPurple"/>
            <padding
                    android:bottom="@dimen/padding_small"
                    android:left="@dimen/padding_small"
                    android:right="@dimen/padding_small"
                    android:top="@dimen/padding_small"/>
        </shape>

    </item>

    <item android:drawable="@drawable/ic_filter"/>
</layer-list>