<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="0" android:endColor="@color/colorPurplePressed" android:startColor="@color/colorBluePressed" android:type="linear" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="0" android:endColor="@color/colorPurple" android:startColor="@color/colorBlue" android:type="linear" />
        </shape>
    </item>
</selector>